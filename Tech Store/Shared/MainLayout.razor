@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout Class="Font-Size-Layout">
    <MudAppBar Elevation="4" Fixed="true" >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <div class="mx-auto text-center">
            <MudNavLink class="Logo" Href="/"><div>Tech Store</div></MudNavLink>
        </div>
    </MudAppBar>
    <MudDrawer PreserveOpenState="true" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="4">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
    <MudScrollToTop>
        <MudFab Color="Color.Primary" Icon="@Icons.Filled.ArrowUpward" />
    </MudScrollToTop>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}


